<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add List</a>
<% end %>

<ul id="lists">
  <% sort_lists(@lists) do |list, index| %>
    <% if list_completed?(list) %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= completed_todos(list) %>/<%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>